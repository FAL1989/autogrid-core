{
  "permissions": {
    "allow": [
      "Bash(docker-compose:*)",
      "Bash(docker:*)",
      "Bash(make:*)",
      "Bash(npm run:*)",
      "Bash(npm install:*)",
      "Bash(pip install:*)",
      "Bash(pytest:*)",
      "Bash(python -m pytest:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(black:*)",
      "Bash(isort:*)",
      "Bash(flake8:*)",
      "Bash(mypy:*)",
      "Bash(alembic:*)",
      "Bash(autogrid:*)",
      "Read",
      "Glob",
      "Grep"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(git commit:*)",
      "Bash(git checkout:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(rm -rf:*)",
      "Bash(docker system prune:*)",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./.env.local)",
      "Read(./.env.production)",
      "Read(./secrets/**)",
      "Read(**/*secret*)",
      "Read(**/*credential*)",
      "Read(**/.git/config)",
      "Edit(./.env)",
      "Edit(./.env.*)",
      "Write(./.env)",
      "Write(./.env.*)",
      "Bash(curl *api_key*:*)",
      "Bash(curl *secret*:*)",
      "Bash(echo $*KEY*:*)",
      "Bash(echo $*SECRET*:*)",
      "Bash(cat .env:*)",
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)"
    ],
    "additionalDirectories": []
  },
  "env": {
    "PYTHONDONTWRITEBYTECODE": "1",
    "PYTHONUNBUFFERED": "1"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$FILE_PATH\" == *.py ]]; then black --quiet \"$FILE_PATH\" 2>/dev/null && isort --quiet \"$FILE_PATH\" 2>/dev/null; fi || true"
          }
        ]
      }
    ]
  },
  "model": "claude-sonnet-4-20250514"
}
